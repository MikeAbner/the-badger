<div id="new-badge-widget" class="widget">
  <h2>Edit Badge</h2>
  <%= form_for @badge, :html => {:multipart => true} do |f| %>

    <p><%= f.label :name %><br />
    <%= f.text_field :name %></p>
    
    <p><%= f.label :description %><br/>
    <%= f.text_area :description, :rows => 5, :cols => 45 %></p>

    <p><%= f.label :image%><br/>
    <%= f.file_field :image %></p>

    <p><%= f.submit "Save Badge" %></p>
  <% end %>
</div>